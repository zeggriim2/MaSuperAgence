{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.Title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ blog.Contenu }}</td>
            </tr>
            <tr>
                <th>Createur</th>
                <td>{{ blog.Createur }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ blog.DateCreation ? blog.DateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_index') }}">back to list</a>

    <a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
